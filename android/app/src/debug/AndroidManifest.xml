<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- ✅ SECURITY: Permissions for debug builds -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <!-- ✅ SECURITY FIX: Explicitly set exported=false for implicit intent receivers -->
    <!-- Debug builds don't expose activities externally -->
    <!-- tools:replace required to override main manifest setting -->
    <application android:usesCleartextTraffic="true" tools:replace="android:usesCleartextTraffic">
        <!-- No activities defined here, inherits from main manifest -->
    </application>
</manifest>
