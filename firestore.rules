rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ✅ Public read access for newspapers and magazines
    match /newspapers/{doc} {
      allow read: if true;
    }

    match /magazines/{doc} {
      allow read: if true;
    }

    // ❌ All other documents: deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
